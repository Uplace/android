<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/divider"
    app:cardCornerRadius="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/property_card_image"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/property_card_image" />

        <TextView
            android:id="@+id/property_card_category_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/property_card_image"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="Apartent for Rent"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/property_card_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/property_card_category_transaction"
            android:layout_alignLeft="@id/property_card_category_transaction"
            android:layout_alignStart="@id/property_card_category_transaction"
            android:layout_marginBottom="2dp"
            android:text="Location"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/property_card_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/property_card_location"
            android:layout_alignLeft="@id/property_card_category_transaction"
            android:layout_alignStart="@id/property_card_category_transaction"
            android:layout_marginBottom="2dp"
            android:text="@string/price"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>